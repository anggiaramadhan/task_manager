<div class="columns">
  <div class="column is-one-third is-offset-4">
    <h1 class="title has-text-centered">Registration</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label "Full Name", class: "label" %>
        <div class="control">
          <%= f.text_field :fullname, class: "input is-small" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :username, class: "label" %>
        <div class="control">
          <%= f.text_field :username, class: "input is-small" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :email, class: "label" %>
        <div class="control">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-small" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %>
        <div class="control">
          <%= f.password_field :password, autocomplete: "new-password", class: "input is-small" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "label" %>
        <div class="control">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-small" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :avatar, class: "label" %><br />
        <div class="control">
          <%= f.file_field :avatar %>
        </div>
      </div>

      <div class="actions has-text-centered">
        <%= f.submit "Submit", class: "button is-primary" %>
      </div>
    <% end %>
  </div>
</div>
