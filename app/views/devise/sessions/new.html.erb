<div class="columns">
  <div class="column is-one-third is-offset-4">
    <h1 class="title has-text-centered"></h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-small" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input is-small" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me, type: "checkbox" %>
          <%= f.label :remember_me, class: "checkbox" %>
        </div>
      <% end -%>

      <div class="actions has-text-centered">
        <%= f.submit "Log in", class: "button is-primary" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>

